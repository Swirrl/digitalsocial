- disqus = local_assigns[:disqus] || false
- attachments = local_assigns[:attachments] || false

.page
  .title
    %h2= link_to "#{page.page_category.name} &raquo;".html_safe, page_category_path(page.page_category)

    %h1= link_to page.name, page_path(page.page_category, page)

  :markdown
    #{page.body}

  - if attachments && page.attachments.any?
    %h4 Resources
    %ul.attachments
      - page.attachments.each do |attachment|
        %li= link_to attachment.file_file_name, attachment.file.url

  - if disqus
    = render "application/disqus", title: page.name