!!!
%html
  %head
    %title= [@title, "Digital Social Innovation"].compact.join(" | ")
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    
    .container
      = render "header"
      
      #main.clearfix
        = yield

        - if user_signed_in?
          .logged-in
            Logged in as
            = current_user.first_name
            = "(#{current_user.email})"
            &middot;
            = link_to "Log out", destroy_user_session_path

    = render "partners"
    = render "footer"
    = render "analytics"

