%h1 Invite to project

%h3 Existing organisation
= simple_form_for @project_invite, url: [:create_invite, @project] do |f|
  = f.input :organisation_uri, as: :select, collection: Organisation.all.resources.collect { |o| [o.name, o.uri] }
  = f.input :nature_uri, as: :select, collection: project_membership_nature_options
  = f.button :submit, 'Invite'

%br/
%br/

%h3 New organisation
= simple_form_for @project_invite, url: [:create_invite, @project] do |f|
  = f.input :new_organisation, as: :hidden, input_html: { value: 1 }
  = f.input :organisation_name, required: false
  = f.input :user_first_name, required: false
  = f.input :user_email, required: false
  = f.input :nature_uri, as: :select, collection: project_membership_nature_options, required: false
  = f.button :submit, 'Invite'
