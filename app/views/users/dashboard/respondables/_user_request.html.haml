.respondable.clearfix{ class: respondable.class.to_s.underscore }
  .image
    = image_tag "http://placehold.it/70x70"

  .text
    .header
      
      = respondable.user.first_name
      %em= "(#{respondable.user.email})"
      has requested to join
      = current_organisation.name
    .subheader

  .action
    = link_to "Accept", [:accept, respondable], method: :put, class: 'button button-green accept'
    = link_to "Ignore", [:reject, respondable], method: :put, class: 'button'
    
