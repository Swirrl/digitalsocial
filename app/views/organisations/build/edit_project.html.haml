.wizard
  = render "breadcrumbs", active_index: 4

  .title
    %h3 Additional activity details
  .clearfix

  = simple_form_for @project, url: [:organisations, :build, :update_project], method: 'put' do |f|
    = hidden_field_tag :id, @project.guid


    = render "projects/fields/advanced", f: f

    .wizard-button-wrapper
      = f.button :submit, 'Next step &raquo;'.html_safe, class: 'button-green'
