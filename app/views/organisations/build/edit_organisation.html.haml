.wizard
  = render "breadcrumbs", active_index: 2

  .wizard-intro
    %h3 Additional organisation details
  .clearfix

  .skip-wizard.clearfix
    %span This step lets you add more details about your organisation

    = link_to "Skip for now &raquo;".html_safe, [:organisations, :build, :new_project], class: 'button'


  = simple_form_for @organisation, url: [:organisations, :build, :update_organisation] do |f|

    = render 'organisations/fields/advanced', f: f

    .wizard-button-wrapper
      = f.button :submit, 'Next step &raquo;'.html_safe, class: 'button-green'
