= render "breadcrumbs", active_index: 4

= simple_form_for @project, url: [:organisations, :build, :create_project] do |f|
  = f.input :name, label: 'Name of your project', input_html: { class: 'project-auto-suggest', autocomplete: :off }
  
  = render 'suggestions'

  = f.input :activity_type_label, label: 'Type of activity', as: :radio, collection: Concepts::ActivityType.top_level_concepts, value_method: :uri
  = f.input :activity_type_label_other, as: :string, label: false, placeholder: 'Other - please state', wrapper_html: { class: 'other' }
  
  = f.input :organisation_natures, label: 'Relationship in activity', as: :check_boxes, collection: Concepts::ProjectMembershipNature.all.resources, value_method: :uri, required: true


  = f.button :submit, 'Next step &raquo;'.html_safe