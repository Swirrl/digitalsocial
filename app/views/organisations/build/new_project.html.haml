= render "breadcrumbs", active_index: 4

= simple_form_for @project, url: [:organisations, :build, :create_project] do |f|
  = f.input :name, label: 'Name of your project', input_html: { class: 'project-auto-suggest', autocomplete: :off }
  
  = render 'suggestions'

  = f.input :activity_type_label, label: 'Type of activity', as: :radio, collection: ActivityType.top_level_tags, value_method: :uri
  = f.input :activity_type_label_other, as: :string, label: 'Other type of activity'
  
  = f.input :creator_natures, label: 'Relationship in activity', as: :check_boxes, collection: ProjectMembershipNature.all.resources, value_method: :uri


  = f.button :submit, 'Next step &raquo;'.html_safe