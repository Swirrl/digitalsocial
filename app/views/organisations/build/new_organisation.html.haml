= render "breadcrumbs", active_index: 1

= simple_form_for @organisation, url: [:organisations, :build, :create_organisation] do |f|
  = f.input :name, label: 'Name of your organisation', input_html: { class: 'organisation-auto-suggest' }
  .suggestion-results
    %p Did you mean...

    - 3.times do
      .suggestion-result.clearfix
        .image
          = image_tag 'http://placehold.it/70x70'

        .details
          .header= Faker::Company.name
          .subheader= Faker::Address.street_address
        
        .action
          = link_to 'Request to join', '#', class: 'button'


  = f.input :lat
  = f.input :lng

  = f.button :submit, 'Next step &raquo;'.html_safe