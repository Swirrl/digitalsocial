%h1 Admin &raquo; Users

= link_to "Download CSV", admin_users_path(format: :csv), class: 'button csv-button'

%table.index.users
  %tr
    %th Name
    %th Email
    %th Organisation(s)

  - @users.each do |user|
    %tr
      %td= user.first_name
      %td= user.email
      %td.text
        = user.organisation_resources.collect { |o| link_to o.name, o }.uniq.join(', ').html_safe
      
